{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@types": [
        "./src/@types/index.d.ts"
      ],
      "@database": [
        "./src/database/index.ts"
      ],
      "@shared": [
        "./src/shared/index.ts"
      ],
      "@config": [
        "./src/config/index.ts"
      ]
    }
  }
}
