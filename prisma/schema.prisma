// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id              String          @id @default(uuid()) @db.VarChar(255)
  username        String          @db.VarChar(32)
  is_admin        Boolean         @default(false)
  name            String          @db.VarChar(255)
  email           String          @db.VarChar(64)
  phone           String          @db.VarChar(64)
  hashed_password String          @db.VarChar(255)
  created_at      DateTime        @default(now()) @db.Timestamp
  updated_at      DateTime        @default(now()) @db.Timestamp
  refresh_token   refresh_token[]
  product         product[]
}

model refresh_token {
  id         String   @id @default(uuid()) @db.VarChar(255)
  expiresIn  String   @db.VarChar(32)
  created_at DateTime @default(now()) @db.Timestamp
  updated_at DateTime @default(now()) @db.Timestamp
  user_id    String   @db.VarChar(255)
  user       user?    @relation(fields: [user_id], references: [id])
}

model symbol {
  id         String   @id @default(uuid()) @db.VarChar(255)
  image      String   @db.Text
  created_at DateTime @default(now()) @db.Timestamp
  updated_at DateTime @default(now()) @db.Timestamp
  product_id String?  @db.VarChar(255)
  product    product? @relation(fields: [product_id], references: [id])
}

model product {
  id              String   @id @default(uuid()) @db.VarChar(255)
  synonym         String   @db.Text
  class           String   @db.Text
  subclass        String   @db.Text
  storage         String   @db.Text
  incompatibility String   @db.Text
  precautions     String   @db.Text
  created_at      DateTime @default(now()) @db.Timestamp
  updated_at      DateTime @default(now()) @db.Timestamp
  user_id         String   @db.VarChar(255)
  user            user?    @relation(fields: [user_id], references: [id])
  symbol          symbol[]
}
