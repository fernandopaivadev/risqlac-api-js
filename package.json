{
  "name": "uirapuru-api",
  "version": "1.0.0",
  "description": "API for the RisqLAB Platform",
  "repository": "https://github.com/FernandoPaivaEC/uirapuru-api",
  "author": "Fernando Paiva <fernandopaiva@techamazon.tech>",
  "license": "COPYRIGHT",
  "private": true,
  "scripts": {
    "update": "yarn upgrade --latest",
    "dev": "nodemon",
    "test": "jest",
    "build": "rm -rf dist && babel src --extensions \".ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "yarn --frozen-lockfile && npx prisma generate && yarn build && npx pm2-runtime ./dist/index.js",
    "lint": "eslint --fix src/**/*.ts",
    "v": "sh -c 'npm version ${0} -no-git-tag-version'",
    "docker:ps": "sudo docker ps -a",
    "docker:rm": "sh -c 'sudo docker rm ${0} -f'",
    "docker:rmi": "sh -c 'sudo docker rmi ${0} -f'",
    "docker:cli": "sh -c 'sudo docker exec -it ${0} /bin/bash'",
    "docker:logs": "sh -c 'sudo docker-compose logs -f'",
    "docker:reset": "sudo docker rm $(sudo docker ps -a -q) -f && sudo docker rmi $(sudo docker images -a -q) -f",
    "docker:clear": "sudo docker rm $(sudo docker ps -a -q) -f",
    "db:replicate": "sudo docker exec -it uirapurudb sh -c 'pg_dump --verbose --clean --no-acl --no-owner --if-exists ${0} | psql --set ON_ERROR_STOP=on uirapurudb -h localhost -p 5432 -U techamazon'",
    "docker:up": "yarn docker:down && sudo docker-compose up -d && yarn docker:ps",
    "docker:down": "sudo docker-compose down"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/node": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.9",
    "@types/nodemailer": "^6.4.4",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.2.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-import-helpers": "^1.1.0",
    "jest": "^27.2.4",
    "nodemon": "^2.0.15",
    "prisma": "^3.5.0",
    "ts-jest": "^27.0.5",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@prisma/client": "^3.5.0",
    "axios": "^0.24.0",
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.1",
    "socket.io": "^4.4.0",
    "swagger-ui-express": "^4.1.6"
  }
}
