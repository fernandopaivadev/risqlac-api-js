{
  "name": "risqlac-api",
  "version": "1.0.0",
  "description": "API for the RisqLAC Platform",
  "repository": "https://github.com/FernandoPaivaEC/risqlac-api",
  "author": "Fernando Paiva <fernandopaivaec@gmail.com>",
  "license": "COPYRIGHT",
  "private": true,
  "scripts": {
    "update": "yarn upgrade --latest",
    "dev": "nodemon",
    "test": "jest",
    "build": "rm -rf dist && babel src --extensions \".ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "yarn build && node ./dist/index.js",
    "lint": "eslint --fix src/**/*.ts",
    "v": "sh -c 'npm version ${0} -no-git-tag-version'",
    "docker:ps": "sudo docker ps -a",
    "docker:rm": "sh -c 'sudo docker rm ${0} -f'",
    "docker:rmi": "sh -c 'sudo docker rmi ${0} -f'",
    "docker:cli": "sh -c 'sudo docker exec -it ${0} /bin/bash'",
    "docker:logs": "sh -c 'sudo docker-compose logs -f'",
    "docker:reset": "sudo docker rm $(sudo docker ps -a -q) -f && sudo docker rmi $(sudo docker images -a -q) -f",
    "docker:clear": "sudo docker rm $(sudo docker ps -a -q) -f"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.2",
    "@babel/node": "^7.17.10",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.35",
    "@types/nodemailer": "^6.4.4",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.16.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "prisma": "^3.14.0",
    "ts-jest": "^28.0.3",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "@types/cors": "^2.8.12",
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "handlebars": "^4.7.7",
    "helmet": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.5"
  }
}
